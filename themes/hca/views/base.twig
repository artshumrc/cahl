{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig" data-ng-controller="HCAController as hca_controller" ng-cloak >

		<header class="header" >
			{% block header %}
				<div class="wrapper">
					<div class="primary-header-content">
						<a class="hdr-logo-link" href="/" rel="home">
							<img src="/wp-content/themes/hca/img/harvard_logo.png">
							<h1 class="hdr-logo" role="banner" ng-show="language=='english'">
								The Charlie Archive at the Harvard Library
							</h1>
							<h1 class="hdr-logo" role="banner" ng-show="language=='francais'">
								Archives Charlie Ã  Harvard
							</h1>

						</a>

						<nav id="nav-main" class="nav-main" role="navigation">

							<div class="nav-item dropdown has-children">
								<a href="#project" data-link_id="project" ng-show="language=='english'">	
									About the Archive
								</a>
								<div class="dropdown-panel raised">
									<a href="#context" data-link_id="context" ng-show="language=='english'">Context</a>
									<a href="#project" data-link_id="project" ng-show="language=='english'">Project Description</a>
									<a href="#goals" data-link_id="goals" ng-show="language=='english'">Goals</a>

								</div>
							</div>
							<div class="nav-item">
								<a href="#propose-submission" data-link_id="propose-submission" ng-show="language=='english'">
									How to contribute to the Archive
								</a>
							</div>
							<div class="nav-item">
								<a href="#contacts" data-link_id="contacts" ng-show="language=='english'">
									Contacts
								</a>
							</div>
							<div class="nav-item dropdown has-children">
								<a href="#project" data-link_id="project" ng-show="language=='francais'">	
									Description de projet
								</a>
								<div class="dropdown-panel raised">
									<a href="#context" data-link_id="context" ng-show="language=='francais'">Context</a>
									<a href="#project" data-link_id="project" ng-show="language=='francais'">Description de projet</a>
									<a href="#goals" data-link_id="goals" ng-show="language=='francais'">Goals</a>
									
								</div>
							</div>
							<div class="nav-item">
								<a href="#propose-submission" data-link_id="propose-submission" ng-show="language=='francais'">
									Formulaire de contribution
								</a>
							</div>
							<div class="nav-item">
								<a href="#contacts" data-link_id="contacts" ng-show="language=='francais'">
									Contacts
								</a>
							</div>

						</nav><!-- #nav -->
					</div>

					<div class="languages">
						<img class="french-flag language" src="/wp-content/themes/hca/min/img/french_flag.png" ng-click="toggle_language($event)" data-language="francais"/>
						<img class="english-flag language selected-language" src="/wp-content/themes/hca/min/img/american_flag.png" ng-click="toggle_language($event)" data-language="english"/>
					</div>

				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}

